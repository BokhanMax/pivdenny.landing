            .footer__container 
                .footer__left
                    .footer__left-graph
                        .footer__logo
                            img(src="./assets/svg/logo_footer.svg", alt="Pivdenny Logo Footer")
                        .footer__buttons
                            .googleplaybutton
                                a(href="https://play.google.com/store/apps/details?id=com.bank.pivdenny") 
